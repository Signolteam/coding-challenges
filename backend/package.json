{
  "name": "shameen-signol-server",
  "description": "",
  "private": true,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shameen/coding-challenges-signol.git"
  },
  "author": "shameen",
  "license": "UNLICENSED",
  "main": "app/handler.ts",
  "scripts": {
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "local": "serverless offline",
    "deploy": "serverless deploy",
    "test": "cross-env NODE_ENV=dev jest -r ts-node/register tests/*.test.ts --exit",
    "coverage": "nyc --reporter lcov npm run test",
    "clean": "npx rimraf .serverless"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.114",
    "@types/dotenv-safe": "^8.1.2",
    "@types/jest": "^29.5.0",
    "@types/lambda-tester": "^3.6.2",
    "@types/node": "^18.15.10",
    "@types/pg": "^8.6.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "jest-sinon": "^1.1.0",
    "lambda-tester": "^4.0.1",
    "rimraf": "^4.4.1",
    "serverless": "^3.29.0",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.4",
    "sinon": "^15.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "app",
    "testRegex": ".*\\.spec\\.ts$",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
